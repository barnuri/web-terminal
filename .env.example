# Server Configuration
PORT=3000
NODE_ENV=development

# Terminal Configuration
TERMINAL_SHELL=/bin/zsh
TERMINAL_ALLOWED_PATH=/home
TERMINAL_SESSION_TIMEOUT=1800000
TERMINAL_MAX_SESSIONS=10
FOLDERS_SHORTCUTS=/home/user/projects,/var/www,/etc
FAV_CMDS=git status,npm test,docker ps,kubectl get pods

# Ngrok Configuration (optional - for exposing local server to internet)
NGROK_AUTHTOKEN=your-ngrok-authtoken-here

# Security - IMPORTANT: Generate a secure secret for production!
# Generate with: openssl rand -base64 32
SESSION_SECRET=change-this-to-a-secure-random-string-in-production

# Authentication (Optional)
AUTH_ENABLE=false
AUTH_ALLOWED_EMAILS=user1@example.com,user2@example.com

# Static Secret Authentication (Optional - alternative to OAuth)
AUTH_STATIC_SECRET=

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback
